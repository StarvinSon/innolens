{
  "name": "@innolens/server",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "homepage": "https://i.cs.hku.hk/fyp/2019/fyp19027/",
  "repository": "https://github.com/StarvinSon/innolens/tree/develop/packages/server",
  "scripts": {
    "clean": "shx rm -rf ./out ./tools ./*.tsbuildinfo",
    "lint": "run-s lint:*",
    "lint:es": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts .",
    "build": "run-s build:tools generate:glue build:server",
    "build:watch": "run-p build:tools:watch generate:glue:watch build:server:watch",
    "build:tools": "tsc --build ./tsconfig-tools.json",
    "build:tools:watch": "tsc --build ./tsconfig-tools.json --watch",
    "generate:glue": "node ./tools/glue-generator.js",
    "generate:glue:watch": "nodemon --watch ../api/spec --watch ./tools --ext js,yaml ./tools/glue-generator.js",
    "build:server": "tsc --build ./tsconfig-server.json",
    "build:server:watch": "tsc --build ./tsconfig-server.json --watch",
    "start": "cross-env NODE_ENV=\"development\" DEBUG=\"koa*\" node ./out/index.js start --config ./server.config.js",
    "start:watch": "cross-env NODE_ENV=\"development\" DEBUG=\"koa*\" nodemon --config ./nodemon.json ./out/index.js -- start --config ./server.config.js",
    "deploy": "pm2 start ./ecosystem.config.js"
  },
  "dependencies": {
    "@innolens/api": "*",
    "@innolens/resolver": "*",
    "@koa/router": "^9.0.0",
    "@types/node-fetch": "^2.5.6",
    "ajv": "^6.11.0",
    "bcrypt": "^4.0.1",
    "co-body": "^6.0.0",
    "csv-parse": "^4.8.8",
    "date-fns": "^2.12.0",
    "deep-equal": "^2.0.2",
    "formidable": "^1.2.2",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.4.0",
    "koa": "^2.11.0",
    "koa-compress": "^3.0.0",
    "koa-send": "^5.0.0",
    "mongodb": "^3.5.6",
    "node-fetch": "^2.6.0",
    "reflect-metadata": "^0.1.13",
    "tmp-promise": "^2.0.2",
    "tslib": "^1.11.1",
    "winston": "^3.2.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@innolens/eslint-config": "*",
    "@types/bcrypt": "^3.0.0",
    "@types/co-body": "^0.0.3",
    "@types/deep-equal": "^1.0.1",
    "@types/formidable": "^1.0.31",
    "@types/http-errors": "^1.6.3",
    "@types/koa": "^2.11.3",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-send": "^4.1.2",
    "@types/koa__router": "^8.0.2",
    "@types/mongodb": "^3.5.6",
    "@types/node": "^13.11.1",
    "@types/tmp": "^0.1.0",
    "@types/yargs": "^15.0.4",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "ts-morph": "^7.0.2",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=13.5.0"
  },
  "private": true
}

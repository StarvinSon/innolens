// This tsconfig.json is for eslint config, lit-analyzer and VSCode language server
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "htmlTemplateTags": [
          "hml"
        ],
        "rules": {
          "no-unknown-event": "warning"
        }
      }
    ]
  },
  "include": [
    "./tools-src/**/*.ts",
    "./src/**/*.ts"
  ]
}
